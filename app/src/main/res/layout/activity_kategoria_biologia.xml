<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aa.systemymobilne.KategoriaBiologia"
    android:background="#231231">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="#2f3058"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:id="@+id/gra_punkty"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="imie"
            android:textColor="#fff"
            android:id="@+id/gra_imieGracza"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/header"
        android:layout_height="match_parent">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:id="@+id/gra_pytanie"
        android:textSize="20sp"
        android:text="NIE MA PYTAN Z TEJ KATEGORII"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/bottom"
        android:background="#2f3058"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:background="#1a9900"
            android:layout_margin="3dp"
            android:id="@+id/gra_odpowiedzTak"
            android:src="@drawable/ic_action_poprawna"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/gra_odpowiedzNie"
            android:src="@drawable/ic_action_bledna"
            android:background="#d20505"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>
